        "kromochnye_materialy",
        "osb",
        "furnitura_dlya_kukhni_",
        "furnitura_mebelnaya"
    ],
    "url_collection": {
        "subcategory_selector": ".menu a[href*='/category/']",
        "product_selector": "a[href*='/product/']",
        "pagination_next_selector": "a.pagination__next",
        "pagination_param": "PAGEN_1",
        "pagination_max_pages": 10,
        "max_depth": 1,
        "filter_keywords": [
