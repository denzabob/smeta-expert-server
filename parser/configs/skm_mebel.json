{
    "name": "skm_mebel",
    "display_name": "СКМ Мебель",
    "base_url": "https://skm-mebel.ru",
    "adapter_class": "suppliers.skm_mebel.SkmMebelAdapter",
    "enabled": true,
    "default_type": "plate",
    "default_unit": "м²",
    "material_unit_mapping": {
        "edge": "м.п.",
        "plate": "м²",
        "hardware": "шт"
    },
    "selectors": {
        "article": ".catalog-detail__article.js-copy-article",
        "name": "meta[itemprop='name']",
        "price_meta": "meta[itemprop='price']",
        "price_text": ".catalog-detail__price, .price",
        "add_to_cart_button": "button.btn-default.to-cart, .catalog-detail__buy button",
        "category_products": ".catalog-item__link",
        "pagination_next": ".pagination__next"
    },
    "delays": {
        "between_requests": 1.5,
        "page_load_timeout": 20000,
        "page_load_retries": 1,
        "element_timeout": 15000
    },
    "use_proxy": false,
    "user_agents": [
        "Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36"
    ],
    "screenshot": {
        "quality": 85,
        "method": 6,
        "full_page": false,
        "format": "webp"
    },
    "validation": {
        "min_price": 0,
        "max_price": 1000000,
        "required_fields": [
            "article",
            "name",
            "price_per_unit"
        ]
    },
    "collect_urls": true,
    "catalog_base_url": "https://skm-mebel.ru/",
    "allowed_categories": [
        "listovye_materialy",
        "dsp_laminirovannaya",
        "mdf",
        "khdf",
        "dsp",
        "dsp_shpuntovannaya",
        "dvp",
