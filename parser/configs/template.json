{
  "name": "template",
  "display_name": "Шаблон Поставщика",
  "base_url": "https://example.com",
  "adapter_class": "parser.suppliers.template_adapter.TemplateAdapter",
  "enabled": false,
  
  "_comment": "Тип материала по умолчанию: plate (плита), edge (кромка), fitting (фурнитура)",
  "default_type": "plate",
  
  "_comment": "Единица измерения: м² (квадратные метры), м.п. (погонные метры), шт (штуки)",
  "default_unit": "м²",
  
  "_comment": "CSS/XPath селекторы для извлечения данных",
  "selectors": {
    "_comment": "Селектор элемента с артикулом",
    "article": ".product-article",
    
    "_comment": "Селектор элемента с названием",
    "name": "h1.product-name",
    
    "_comment": "Селектор meta-тега с ценой (приоритет)",
    "price_meta": "meta[itemprop='price']",
    
    "_comment": "Селектор видимого элемента с ценой (fallback)",
    "price_text": ".product-price",
    
    "_comment": "Селектор кнопки добавления в корзину",
