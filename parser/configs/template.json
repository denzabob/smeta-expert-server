    "category_products": ".product-item a",
    
    "_comment": "Селектор кнопки 'следующая страница' в пагинации",
    "pagination_next": ".pagination .next"
  },
  
  "_comment": "Задержки и таймауты (в миллисекундах)",
  "delays": {
    "between_requests": 1.5,
    "page_load_timeout": 30000,
    "element_timeout": 15000
