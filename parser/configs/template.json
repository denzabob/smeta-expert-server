  "material_types": ["лдсп", "мдф", "хдф", "дсп", "фанера"],
  "_comment_material_types": "Типы материалов для автоматической классификации собранных URL",
  
  "url_validation_timeout": 5,
  "_comment_validation_timeout": "Таймаут для проверки доступности URL (секунды)",
  
  "max_invalid_retries": 3,
  "_comment_max_invalid_retries": "Максимум попыток перед исключением битой ссылки"
}
